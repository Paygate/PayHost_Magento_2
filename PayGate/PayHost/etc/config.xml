<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <payhost>
                <active>1</active>
                <title>Paygate Payhost</title>
                <instructions>Pay via Paygate</instructions>
                <payment_action>Authorization</payment_action>
                <test>1</test>
                <model>PayGate\PayHost\Model\PayGate</model>
                <can_authorize_vault>1</can_authorize_vault>
                <is_gateway>0</is_gateway>
                <can_order>1</can_order>
                <can_use_checkout>1</can_use_checkout>
                <can_capture>1</can_capture>
                <can_void>1</can_void>
                <can_refund>0</can_refund>
                <can_use_for_multishipping>1</can_use_for_multishipping>
            </payhost>
        </payment>
    </default>
</config>
